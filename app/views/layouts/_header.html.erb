<% if admin_signed_in? %>
  <!--adminのログインしているかつURLが/adminのとき-->
  <% if request.fullpath.include? "/admin" %>
    <%= link_to "ログアウト", destroy_admin_session_path %>
  <% end %>
<% elsif user_signed_in? %>
  <!--userがログインしているかつURLが/adminではないとき-->
  <% unless request.fullpath.include? "/admin" %>
    <%= link_to "ログアウト", destroy_user_session_path %>
  <% end %>
<% else %>
  <!--userがログインしていないかつURLが/adminではないとき-->
  <% unless request.fullpath.include? "/admin" %>
   <!--userのログイン前-->
    <%= link_to "新規登録", new_user_registration_path %>

    <%= link_to "ログイン", new_user_session_path %>
  <% else %>
    <!--adminログイン前-->
    <%= link_to "ログイン", new_admin_session_path %>
  <% end %>
<% end %>